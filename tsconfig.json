{
    "compilerOptions": {
        "module":"es2015",
        "target": "es2015",
        "jsx": "react",
        "rootDir": "src",
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "moduleResolution":"Node",
        "isolatedModules": true,
        "strictNullChecks": true
    },
    "filesGlob": [
        "types/combine-dependant-reducers.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "node_modules/typescript/lib/lib.es6.d.ts"
    ],
    "types": [
      "react",
      "react-dom",
      "react-native"
    ],
    "exclude":[
        "build", 
        "node_modules",
        "jest.config.js",
        "babel.config.js",
        "App.js",
        "index.js",
        "shim.js"
    ],
    "compileOnSave": false
}
